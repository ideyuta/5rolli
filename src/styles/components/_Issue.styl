.Issue
  size(100%, auto)
  background: $gray100
  margin: 2px 0
  padding: 12px 16px
  &__title
    typo(15px, $brown800, 500)
    margin: 0
  &__summary
    margin: 0
    &__current, &__past
      border-radius(2px)
      typo(10px, #fff, 700, 16px)
      color: #fff
      padding: 3px 5px
    &__current
      margin: 0 4px 0 0
      background: $aqua500
    &__past
      background: $orange500
      margin: 0 12px 0 0
    &__open, &__close, &__wait
      typo(11px, $brown800, 16px)
      padding: 0 12px 0 0
    &__close
      color: $orange500
    &__wait
      color: $gray300
